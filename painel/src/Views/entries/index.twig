{% extends "layouts/admin.twig" %}

{% block content %}
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0" id="pageTitle">Gerenciador de Entradas: <span class="text-capitalize">{{ type_slug }}</span></h5>
    <a href="/entries/{{ type_slug }}/create" class="btn btn-primary" id="btnNovo">
      <i class="icon-base bx bx-plus me-1"></i> Adicionar Novo
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive text-nowrap">
      <table class="table table-hover" id="entriesTable">
        <thead>
          <tr id="tableHeaders">
            <!-- Headers Injetados Via JS (Depende do Schema) -->
            <th>ID</th>
            <th>Data de Criação</th>
            <th>Status</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody class="table-border-bottom-0" id="entriesTableBody">
          <tr>
            <td colspan="4" class="text-center py-4"><i class="bx bx-loader bx-spin text-primary"></i> Lendo banco de dados...</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
{% endblock %}

{% block page_js %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const token = localStorage.getItem('santis_jwt');
    const slug = '{{ type_slug }}';
    const tbody = document.getElementById('entriesTableBody');

    console.log('Santis: Start Fetch for', slug);
    fetch('/api/secure/entries/' + slug, {
        method: 'GET',
        headers: {
            'Authorization': 'Bearer ' + token,
            'Accept': 'application/json'
        }
    })
    .then(r => {
        console.log('HTTP Response Status:', r.status);
        if (!r.ok) {
            console.error('Response not OK');
        }
        return r.json();
    })
    .then(data => {
        console.log('API Data Received:', data);
        if(!data.success) {
            tbody.innerHTML = `<tr><td colspan="4" class="text-center py-4 text-danger">${data.message}</td></tr>`;
            return;
        }

        if(data.data.length > 0) {
            tbody.innerHTML = ''; 
            
            data.data.forEach(entry => {
                let statusBadge = entry.status === 'published' 
                    ? '<span class="badge bg-label-success">Publicado</span>'
                    : '<span class="badge bg-label-warning">Rascunho</span>';
                
                let formatedDate = new Date(entry.created_at).toLocaleDateString('pt-BR');

                // Aqui poderiamos iterar sobre o content_data para pintar colunas extras, 
                // mas para MVP manteremos ID e Actions para não sobrecarregar
                const d = entry.content_data || {};
                let nameFallback = d.title || d.titulo || d.name || d.nome || entry.title || `Registro #${entry.id}`;

                tbody.innerHTML += `
                  <tr>
                    <td><strong>${nameFallback}</strong></td>
                    <td>${formatedDate}</td>
                    <td>${statusBadge}</td>
                    <td>
                      <a href="/entries/${slug}/${entry.id}/edit" class="btn btn-sm btn-icon btn-text-secondary" title="Editar"><i class="bx bx-edit"></i></a>
                      <button type="button" class="btn btn-sm btn-icon btn-text-danger btn-delete" data-id="${entry.id}" title="Apagar"><i class="bx bx-trash"></i></button>
                    </td>
                  </tr>
                `;
            });

            // Delete logic
            document.querySelectorAll('.btn-delete').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    if (confirm('Tem certeza que deseja apagar este registro?')) {
                        fetch(`/api/secure/entries/${slug}/${id}`, {
                            method: 'DELETE',
                            headers: { 'Authorization': 'Bearer ' + token }
                        })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) {
                                window.location.reload();
                            } else {
                                alert('Erro: ' + data.message);
                            }
                        });
                    }
                });
            });
            
        } else {
            tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4 text-muted">Nenhum registro encontrado neste módulo.</td></tr>';
        }
    })
    .catch(error => {
        console.error('Erro:', error);
        tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4 text-danger">Erro de Conexão com a API Base.</td></tr>';
    });
});
</script>
{% endblock %}
