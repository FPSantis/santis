{% extends "layouts/admin.twig" %}

{% block page_css %}
<!-- Dropzone CSS -->
<link rel="stylesheet" href="{{ ASSETS_URL }}/admin_theme/vendor/libs/dropzone/dropzone.css" />
<style>
  .media-card { transition: all 0.2s ease; cursor: pointer; border: 1px solid transparent; }
  .media-card:hover { transform: translateY(-4px); box-shadow: 0 0.5rem 1rem rgba(105, 108, 255, 0.15); border-color: #696cff; }
  .media-card.selected { border: 2px solid #696cff !important; }
  
  .media-preview-container { 
    aspect-ratio: 1/1; 
    overflow: hidden; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    background: #f5f5f9;
    border-radius: 0.375rem 0.375rem 0 0;
  }
  .media-preview { width: 100%; height: 100%; object-fit: cover; }
  .media-icon { font-size: 3.5rem; color: #8592a3; }
  
  /* Overlays & Actions (Sneat style) */
  .card-actions { 
    position: absolute; 
    top: 8px; 
    right: 8px; 
    display: flex; 
    gap: 4px; 
    opacity: 0; 
    transition: opacity 0.2s;
    z-index: 10;
  }
  .media-card:hover .card-actions { opacity: 1; }
  
  .select-overlay { 
    position: absolute; 
    top: 8px; 
    left: 8px; 
    z-index: 10;
  }

  /* Folders */
  .folder-item { cursor: pointer; transition: 0.2s; }
  .folder-item:hover { transform: translateY(-2px); }
</style>
{% endblock %}

{% block content %}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0">Gerenciador de Mídia</h4>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 mt-1" id="mediaBreadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)" onclick="navigateFolder(null)">Uploads</a></li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalCreateFolder">
                <i class="bx bx-folder-plus me-1"></i> Nova Pasta
            </button>
            <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#uploadCollapse">
                <i class="bx bx-upload me-1"></i> Enviar Arquivos
            </button>
        </div>
    </div>

    <!-- Upload Area -->
    <div class="collapse mb-4" id="uploadCollapse">
        <div class="card">
            <div class="card-body">
                <div id="dz-upload" class="dropzone p-5 border-dashed rounded text-center">
                    <div class="dz-message">
                        <i class="bx bx-cloud-upload display-4 text-primary"></i>
                        <h5 class="mt-3">Solte os arquivos aqui ou clique para fazer upload</h5>
                        <p class="text-muted small mb-0">Arquivos serão salvos na pasta atual</p>
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-end gap-2 d-none" id="uploadActions">
                    <button class="btn btn-label-secondary" id="btnCancelUpload">Cancelar</button>
                    <button class="btn btn-primary" id="btnStartUpload">Iniciar Envio</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Toolbar -->
    <div class="card mb-4">
        <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3 py-3">
            <div class="d-flex align-items-center gap-3 flex-grow-1">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type active" data-type="all">Tudo</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="image">Imagens</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="video">Vídeos</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="document">PDFs</button>
                </div>
                <div class="input-group input-group-merge w-auto" style="min-width: 300px;">
                    <span class="input-group-text"><i class="bx bx-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Buscar em mídias...">
                </div>
            </div>
            
            <div class="d-flex align-items-center gap-3">
                <div id="bulkActions" class="d-none">
                    <button class="btn btn-label-danger btn-sm" id="btnBulkDelete">
                        <i class="bx bx-trash me-1"></i> Excluir (<span id="bulkCount">0</span>)
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-sm btn-outline-secondary active" id="viewGrid"><i class="bx bx-grid-alt"></i></button>
                    <button class="btn btn-sm btn-outline-secondary" id="viewList"><i class="bx bx-list-ul"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid Container -->
    <div class="row g-4" id="mediaWrapper">
         <!-- Content injected via JS -->
    </div>
    
    <!-- Infinite Scroll Anchor -->
    <div id="loadMoreTrigger" class="text-center py-4">
        <div id="mediaLoading" class="spinner-border text-primary d-none" role="status"></div>
    </div>
</div>

<!-- Offcanvas Details (Sneat standard) -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasDetails" aria-labelledby="offcanvasDetailsLabel">
    <div class="offcanvas-header border-bottom">
        <h5 id="offcanvasDetailsLabel" class="offcanvas-title fw-bold">Propriedades do Ativo</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div id="detailPreview" class="mb-4 bg-lighter rounded p-3 text-center d-flex align-items-center justify-content-center" style="min-height: 200px;">
            <!-- Preview here -->
        </div>
        
        <div class="mb-4">
            <h6 class="text-muted text-uppercase small fw-bold mb-3">Informações Técnicas</h6>
            <div class="row g-3">
                <div class="col-6">
                    <label class="text-muted small d-block">Tamanho</label>
                    <span id="metaSize" class="fw-medium font-size-8125">-</span>
                </div>
                <div class="col-6">
                    <label class="text-muted small d-block">Extensão</label>
                    <span id="metaExt" class="fw-medium font-size-8125">-</span>
                </div>
                <div class="col-6">
                    <label class="text-muted small d-block">Data</label>
                    <span id="metaDate" class="fw-medium font-size-8125">-</span>
                </div>
                <div class="col-6">
                    <label class="text-muted small d-block">Mime</label>
                    <span id="metaMime" class="fw-medium font-size-8125">-</span>
                </div>
            </div>
        </div>

        <form id="formMediaDetails">
            <input type="hidden" id="editId">
            <div class="mb-3">
                <label class="form-label small text-uppercase fw-bold">Título / Nome</label>
                <input type="text" id="editFileName" class="form-control" placeholder="Nome amigável...">
            </div>
            <div class="mb-3">
                <label class="form-label small text-uppercase fw-bold">Alt Text (SEO)</label>
                <textarea id="editAltText" class="form-control" rows="2" placeholder="Descreva a imagem..."></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label small text-uppercase fw-bold">Legenda</label>
                <textarea id="editCaption" class="form-control" rows="2"></textarea>
            </div>
            
            <div class="mb-4 d-none" id="usageContainer">
                <h6 class="text-muted text-uppercase small fw-bold mb-3">Indexado em (Usado em)</h6>
                <div id="usageList" class="list-group list-group-flush border rounded">
                    <!-- Usage links here -->
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <button type="button" class="btn btn-label-danger" id="btnDeleteDetail">Excluir Permanente</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Create Folder -->
<div class="modal fade" id="modalCreateFolder" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nova Pasta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-primary d-flex align-items-center mb-3">
                    <i class="bx bx-info-circle me-2"></i>
                    <span>A pasta será criada fisicamente no CDN Santis.</span>
                </div>
                <div>
                    <label class="form-label">Nome da Pasta</label>
                    <input type="text" id="newFolderName" class="form-control" placeholder="Ex: banners-2024">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="btnConfirmCreateFolder">Criar Agora</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block page_js %}
<script src="{{ ASSETS_URL }}/admin_theme/vendor/libs/dropzone/dropzone.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const token = localStorage.getItem('santis_jwt');
    const cdnBase = 'https://cdn.santis.net.br'; // Using the defined domain
    
    // State
    let currentFolderId = null; // null means root
    let currentFolderName = 'Raiz';
    let currentPath = '/uploads';
    let currentSearch = '';
    let currentType = 'all';
    let currentPage = 1;
    let isLoading = false;
    let hasMore = true;
    let selectedIds = [];
    
    // UI Refs
    const wrapper = document.getElementById('mediaWrapper');
    const loading = document.getElementById('mediaLoading');
    const searchInput = document.getElementById('searchInput');
    const bulkActions = document.getElementById('bulkActions');
    const bulkCount = document.getElementById('bulkCount');
    const offcanvasDetailsEls = document.getElementById('offcanvasDetails');
    const offcanvasDetails = new bootstrap.Offcanvas(offcanvasDetailsEls);
    
    // API Fetcher
    async function loadMedia(refresh = false) {
        if (isLoading || (!hasMore && !refresh)) return;
        
        isLoading = true;
        if (refresh) {
            currentPage = 1;
            wrapper.innerHTML = '';
            hasMore = true;
            isLoading = true; // Block multiple refreshes
        }
        loading.classList.remove('d-none');
        
        const params = new URLSearchParams({
            folder_id: currentFolderId || '',
            q: currentSearch,
            type: currentType === 'all' ? '' : currentType,
            page: currentPage,
            limit: 40
        });
        
        try {
            const resp = await fetch(`/api/secure/media?${params}`, {
                headers: { 'Authorization': 'Bearer ' + token }
            });
            const res = await resp.json();
            
            if (res.success) {
                if (refresh) {
                    renderFolders(res.data.folders);
                    updateBreadcrumbs(res.data.current_folder);
                }
                renderFiles(res.data.files);
                
                if (res.data.files.length < 40) hasMore = false;
                currentPage++;
            }
        } catch (e) {
            console.error(e);
        } finally {
            isLoading = false;
            loading.classList.add('d-none');
        }
    }

    function renderFolders(folders) {
        if (!folders) return;
        folders.forEach(f => {
            const div = document.createElement('div');
            div.className = 'col-6 col-md-4 col-lg-2 folder-item';
            div.innerHTML = `
                <div class="card h-100 shadow-none border" onclick="navigateFolder(${f.id}, '${f.name}')">
                    <div class="card-body d-flex align-items-center p-3">
                        <i class="bx bxs-folder bx-md text-warning me-2"></i>
                        <div class="text-truncate">
                            <h6 class="mb-0 text-truncate">${f.name}</h6>
                        </div>
                    </div>
                </div>
            `;
            wrapper.appendChild(div);
        });
    }

    function renderFiles(files) {
        files.forEach(f => {
            const isImg = f.mime_type.startsWith('image/');
            const url = cdnBase + f.file_path; // Corrected: was file_path
            const ext = f.file_path.split('.').pop().toUpperCase();
            
            const div = document.createElement('div');
            div.className = 'col-6 col-md-4 col-lg-2';
            div.innerHTML = `
                <div class="card h-100 media-card shadow-none border" data-id="${f.id}">
                    <div class="select-overlay">
                        <input class="form-check-input bulk-check ms-0 mt-0" type="checkbox" value="${f.id}">
                    </div>
                    <div class="card-actions">
                        <button type="button" class="btn btn-icon btn-xs btn-white shadow-sm btn-edit" title="Detalhes"><i class="bx bx-pencil text-primary"></i></button>
                        <a href="${url}" target="_blank" class="btn btn-icon btn-xs btn-white shadow-sm" title="Abrir Link"><i class="bx bx-link-external text-secondary"></i></a>
                    </div>
                    <div class="media-preview-container">
                        ${isImg ? `<img src="${url}" class="media-preview" alt="${f.alt_text || ''}">` : `<i class="bx bxs-file-blank media-icon"></i>`}
                    </div>
                    <div class="card-body p-2 border-top">
                        <p class="card-text small fw-medium text-truncate mb-0" title="${f.file_name}">${f.file_name}</p>
                        <div class="d-flex justify-content-between align-items-center mt-1">
                            <span class="badge bg-label-secondary p-1 font-size-10">${ext}</span>
                            <span class="text-muted font-size-10">${(f.size / 1024).toFixed(0)} KB</span>
                        </div>
                    </div>
                </div>
            `;
            
            const cardEl = div.querySelector('.media-card');
            
            // Edit action
            div.querySelector('.btn-edit').addEventListener('click', (e) => {
                e.stopPropagation();
                openDetails(f.id);
            });
            
            // Checkbox logic
            div.querySelector('.bulk-check').onclick = (e) => {
                e.stopPropagation();
                handleSelection(f.id, e.target.checked);
            };

            // Card click (open details)
            cardEl.onclick = (e) => {
                if (e.target.tagName === 'INPUT' || e.target.closest('.card-actions')) return;
                openDetails(f.id);
            };

            wrapper.appendChild(div);
        });
    }

    function handleSelection(id, checked) {
        if (checked) selectedIds.push(id);
        else selectedIds = selectedIds.filter(v => v !== id);
        
        bulkCount.innerText = selectedIds.length;
        if (selectedIds.length > 0) bulkActions.classList.remove('d-none');
        else bulkActions.classList.add('d-none');
        
        const el = document.querySelector(`.media-card[data-id="${id}"]`);
        if (el) {
            if (checked) el.classList.add('selected');
            else el.classList.remove('selected');
        }
    }

    async function openDetails(id) {
        const resp = await fetch(`/api/secure/media/${id}`, {
            headers: { 'Authorization': 'Bearer ' + token }
        });
        const res = await resp.json();
        
        if (res.success) {
            const f = res.data;
            document.getElementById('editId').value = f.id;
            document.getElementById('editFileName').value = f.file_name;
            
            // Technical specs
            document.getElementById('metaSize').innerText = f.size_formatted;
            document.getElementById('metaExt').innerText = f.file_path.split('.').pop().toUpperCase();
            document.getElementById('metaDate').innerText = new Date(f.created_at).toLocaleDateString();
            document.getElementById('metaMime').innerText = f.mime_type;
            
            // Editable fields
            document.getElementById('editAltText').value = f.alt_text || '';
            document.getElementById('editCaption').value = f.caption || '';
            
            const fullUrl = cdnBase + f.file_path;
            const container = document.getElementById('usageContainer');
            const list = document.getElementById('usageList');
            list.innerHTML = '';
            
            if (f.used_in && f.used_in.length > 0) {
                container.classList.remove('d-none');
                f.used_in.forEach(use => {
                    list.innerHTML += `
                        <a href="/content/${use.type_slug}/edit/${use.id}" target="_blank" class="list-group-item list-group-item-action p-2 small d-flex justify-content-between">
                            <span>${use.title}</span>
                            <span class="badge bg-label-info">${use.type_name}</span>
                        </a>
                    `;
                });
            } else {
                container.classList.add('d-none');
            }

            const isImg = f.mime_type.startsWith('image/');
            document.getElementById('detailPreview').innerHTML = isImg 
                ? `<img src="${fullUrl}" class="img-fluid rounded" style="max-height: 200px; object-fit: contain;">`
                : `<i class="bx bxs-file-blank display-1 text-primary"></i>`;
            
            offcanvasDetails.show();
        }
    }

    // Navigation and Breadcrumbs
    window.navigateFolder = (id, name = 'Mídia') => {
        currentFolderId = id;
        currentFolderName = name;
        loadMedia(true);
        selectedIds = [];
        bulkActions.classList.add('d-none');
    };

    function updateBreadcrumbs(folder) {
        const bc = document.getElementById('mediaBreadcrumb');
        bc.innerHTML = '<li class="breadcrumb-item"><a href="javascript:void(0)" onclick="navigateFolder(null)">Mídia</a></li>';
        
        if (folder) {
            // Here we could handle path segments if we wanted nested logic, but for now simple 1-level or full name
            bc.innerHTML += `<li class="breadcrumb-item active">${folder.name}</li>`;
        }
    }

    // Search and Filters
    let searchTimeout;
    searchInput.oninput = () => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            currentSearch = searchInput.value;
            loadMedia(true);
        }, 500);
    };

    document.querySelectorAll('.filter-type').forEach(btn => {
        btn.onclick = () => {
            document.querySelectorAll('.filter-type').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            currentType = btn.dataset.type;
            loadMedia(true);
        };
    });

    // Form Submissions
    document.getElementById('formMediaDetails').onsubmit = async (e) => {
        e.preventDefault();
        const id = document.getElementById('editId').value;
        const data = {
            file_name: document.getElementById('editFileName').value,
            alt_text: document.getElementById('editAltText').value,
            caption: document.getElementById('editCaption').value
        };
        
        const resp = await fetch(`/api/secure/media/${id}`, {
            method: 'PUT',
            headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if ((await resp.json()).success) {
            offcanvasDetails.hide();
            loadMedia(true);
        }
    };

    document.getElementById('btnConfirmCreateFolder').onclick = async () => {
        const name = document.getElementById('newFolderName').value;
        if (!name) return;
        
        const resp = await fetch('/api/secure/media/folders', {
            method: 'POST',
            headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams({ name: name, parent_id: currentFolderId || '' })
        });
        
        if ((await resp.json()).success) {
            bootstrap.Modal.getInstance(document.getElementById('modalCreateFolder')).hide();
            document.getElementById('newFolderName').value = '';
            loadMedia(true);
        }
    };

    document.getElementById('btnDeleteDetail').onclick = async () => {
        if (!confirm('Deseja excluir este arquivo permanentemente do CDN?')) return;
        const id = document.getElementById('editId').value;
        await fetch(`/api/secure/media/${id}`, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } });
        offcanvasDetails.hide();
        loadMedia(true);
    };

    document.getElementById('btnBulkDelete').onclick = async () => {
        if (!confirm(`Excluir permanentemente ${selectedIds.length} mídias selecionadas?`)) return;
        await fetch('/api/secure/media/delete-bulk', {
            method: 'POST',
            headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' },
            body: JSON.stringify({ ids: selectedIds })
        });
        selectedIds = [];
        bulkActions.classList.add('d-none');
        loadMedia(true);
    };

    // Dropzone Configuration
    Dropzone.autoDiscover = false;
    const myDropzone = new Dropzone("#dz-upload", {
        url: "/api/secure/media/upload",
        headers: { 'Authorization': 'Bearer ' + token },
        autoProcessQueue: false,
        addRemoveLinks: true,
        parallelUploads: 5,
        params: () => ({ folder_id: currentFolderId || '' }),
        acceptedFiles: 'image/*,application/pdf,video/*',
    });

    myDropzone.on("addedfile", () => document.getElementById('uploadActions').classList.remove('d-none'));
    myDropzone.on("queuecomplete", () => {
        myDropzone.removeAllFiles();
        document.getElementById('uploadActions').classList.add('d-none');
        bootstrap.Collapse.getInstance(document.getElementById('uploadCollapse')).hide();
        loadMedia(true);
    });

    document.getElementById('btnStartUpload').onclick = () => myDropzone.processQueue();
    document.getElementById('btnCancelUpload').onclick = () => {
        myDropzone.removeAllFiles();
        document.getElementById('uploadActions').classList.add('d-none');
    };

    // Infinite Scroll Implementation
    const observer = new IntersectionObserver(entries => {
        if (entries[0].isIntersecting && hasMore && !isLoading) {
            loadMedia();
        }
    }, { threshold: 0.5 });
    observer.observe(document.getElementById('loadMoreTrigger'));

    // Copy URL helper
    document.getElementById('btnCopyUrl').onclick = () => {
        const urlInput = document.getElementById('editUrl');
        urlInput.select();
        document.execCommand('copy');
        const icon = document.querySelector('#btnCopyUrl i');
        icon.className = 'bx bx-check text-success';
        setTimeout(() => icon.className = 'bx bx-copy', 2000);
    };

    // Init
    loadMedia(true);
});
</script>
{% endblock %}
