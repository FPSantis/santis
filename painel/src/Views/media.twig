{% extends "layouts/admin.twig" %}

{% block page_css %}
<!-- Dropzone CSS -->
<link rel="stylesheet" href="{{ ASSETS_URL }}/admin_theme/vendor/libs/dropzone/dropzone.css" />
<style>
  .media-card { transition: all 0.2s ease; cursor: pointer; border: 1px solid transparent; }
  .media-card:hover { transform: translateY(-4px); box-shadow: 0 0.5rem 1rem rgba(105, 108, 255, 0.15); border-color: #696cff; }
  .media-card.selected { border: 2px solid #696cff !important; }
  
  .media-preview-container { 
    aspect-ratio: 1/1; 
    overflow: hidden; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    background: #f5f5f9;
    border-radius: 0.375rem 0.375rem 0 0;
  }
  /* Checkerboard for transparent assets (SVG, PNG with alpha) */
  .media-preview-container.transparent-bg {
    background-color: transparent;
    background-image:
      linear-gradient(45deg, #ccc 25%, transparent 25%),
      linear-gradient(-45deg, #ccc 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, #ccc 75%),
      linear-gradient(-45deg, transparent 75%, #ccc 75%);
    background-size: 16px 16px;
    background-position: 0 0, 0 8px, 8px -8px, -8px 0px;
  }
  /* Dark theme override */
  [data-theme="dark"] .media-preview-container.transparent-bg,
  .dark-layout .media-preview-container.transparent-bg {
    background-image:
      linear-gradient(45deg, #3a3a4a 25%, transparent 25%),
      linear-gradient(-45deg, #3a3a4a 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, #3a3a4a 75%),
      linear-gradient(-45deg, transparent 75%, #3a3a4a 75%);
    background-size: 16px 16px;
    background-position: 0 0, 0 8px, 8px -8px, -8px 0px;
    background-color: #2b2c40;
  }
  .media-preview { width: 100%; height: 100%; object-fit: contain; }
  .media-preview.cover { object-fit: cover; }
  .media-icon { font-size: 3.5rem; color: #8592a3; }
  
  /* Overlays & Actions (Sneat style) */
  .card-actions { 
    position: absolute; 
    top: 8px; 
    right: 8px; 
    display: flex; 
    gap: 4px; 
    opacity: 0; 
    transition: opacity 0.2s;
    z-index: 10;
  }
  .media-card:hover .card-actions { opacity: 1; }
  
  .select-overlay { 
    position: absolute; 
    top: 8px; 
    left: 8px; 
    z-index: 10;
  }

  /* Folders */
  .folder-item { cursor: pointer; transition: 0.2s; }
  .folder-item:hover { transform: translateY(-2px); }

  /* List View */
  #mediaWrapper.list-view { display: flex !important; flex-direction: column; gap: 0.5rem; }
  #mediaWrapper.list-view > div { width: 100% !important; flex: none !important; max-width: 100% !important; }
  #mediaWrapper.list-view .media-card { flex-direction: row !important; height: auto !important; }
  #mediaWrapper.list-view .media-preview-container { 
    width: 64px; min-width: 64px; height: 64px;
    aspect-ratio: unset;
    border-radius: 0.375rem 0 0 0.375rem;
    flex-shrink: 0;
  }
  #mediaWrapper.list-view .media-preview { object-fit: cover; }
  #mediaWrapper.list-view .card-body { 
    border-top: none !important; 
    border-left: 1px solid rgba(0,0,0,.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 0.75rem !important;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  #mediaWrapper.list-view .card-body p { margin-bottom: 0; flex: 1; min-width: 0; }
  #mediaWrapper.list-view .card-body > div { margin-top: 0 !important; }
  #mediaWrapper.list-view .folder-item .card { flex-direction: row !important; height: auto !important; }
  #mediaWrapper.list-view .folder-item .card-body { border-left: 3px solid #ffab00; flex-direction: row; align-items: center; gap: 0.75rem; }
</style>
{% endblock %}

{% block content %}

    <!-- Content Header: Breadcrumb (left) + Upload button (right) -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0" id="mediaBreadcrumb">
                <li class="breadcrumb-item active">Início</li>
            </ol>
        </nav>
        <button type="button" class="btn btn-primary" id="btnOpenUpload" data-bs-toggle="collapse" data-bs-target="#uploadCollapse">
            <i class="bx bx-upload me-1"></i> Adicionar novos ativos
        </button>
    </div>

    <!-- Upload Area -->
    <div class="collapse mb-4" id="uploadCollapse">
        <div class="card">
            <div class="card-body">
                <div id="dz-upload" class="dropzone p-5 border-dashed rounded text-center">
                    <div class="dz-message" id="dzMessage">
                        <i class="bx bx-cloud-upload display-4 text-primary"></i>
                        <h5 class="mt-3">Solte os arquivos aqui ou clique para fazer upload</h5>
                        <p class="text-muted small mb-0">Os arquivos serão organizados automaticamente em subpastas de data.</p>
                    </div>
                    <div id="rootUploadWarning" class="d-none p-4">
                        <i class="bx bx-error-circle display-4 text-warning"></i>
                        <h5 class="mt-3">Selecione uma categoria primeiro</h5>
                        <p class="text-muted">Por favor, navegue até uma das pastas acima (Portfolio, Radar, etc) para enviar novos arquivos.</p>
                    </div>
                </div>
                <div class="mt-3 d-flex justify-content-end gap-2 d-none" id="uploadActions">
                    <button class="btn btn-label-secondary" id="btnCancelUpload">Cancelar</button>
                    <button class="btn btn-primary" id="btnStartUpload">Iniciar Envio</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Toolbar -->
    <div class="card mb-4">
        <div class="card-body d-flex flex-wrap align-items-center justify-content-between gap-3 py-3">
            <div class="d-flex align-items-center gap-3 flex-grow-1">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="all">Tudo</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="image">Imagens</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="video">Vídeos</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary filter-type" data-type="document">PDFs</button>
                </div>
                <div class="input-group input-group-merge w-auto" style="min-width: 300px;">
                    <span class="input-group-text"><i class="bx bx-search"></i></span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Buscar em mídias...">
                </div>
            </div>
            
            <div class="d-flex align-items-center gap-3">
                <div id="bulkActions" class="d-none">
                    <button class="btn btn-label-danger btn-sm" id="btnBulkDelete">
                        <i class="bx bx-trash me-1"></i> Excluir (<span id="bulkCount">0</span>)
                    </button>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-sm btn-outline-secondary active" id="viewGrid"><i class="bx bx-grid-alt"></i></button>
                    <button class="btn btn-sm btn-outline-secondary" id="viewList"><i class="bx bx-list-ul"></i></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid Container -->
    <div class="row g-4" id="mediaWrapper">
         <!-- Content injected via JS -->
    </div>
    
    <!-- Infinite Scroll Anchor -->
    <div id="loadMoreTrigger" class="text-center py-4">
        <div id="mediaLoading" class="spinner-border text-primary d-none" role="status"></div>
    </div>
</div>

<!-- Offcanvas Details (Sneat standard) -->
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasDetails" aria-labelledby="offcanvasDetailsLabel">
    <div class="offcanvas-header border-bottom">
        <h5 id="offcanvasDetailsLabel" class="offcanvas-title fw-bold">Propriedades do Ativo</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <div id="detailPreview" class="mb-4 bg-lighter rounded p-3 text-center d-flex align-items-center justify-content-center" style="min-height: 200px;">
            <!-- Preview here -->
        </div>
        
        <div class="mb-4">
            <h6 class="text-muted text-uppercase small fw-bold mb-3">Informações Técnicas</h6>
            <div class="row g-3">
                <div class="col-6">
                    <label class="text-muted small d-block">Tamanho</label>
                    <span id="metaSize" class="fw-medium font-size-8125">-</span>
                </div>
                <div class="col-6">
                    <label class="text-muted small d-block">Extensão</label>
                    <span id="metaExt" class="fw-medium font-size-8125">-</span>
                </div>
                <div class="col-6">
                    <label class="text-muted small d-block">Data</label>
                    <span id="metaDate" class="fw-medium font-size-8125">-</span>
                </div>
                <div class="col-6">
                    <label class="text-muted small d-block">Mime</label>
                    <span id="metaMime" class="fw-medium font-size-8125">-</span>
                </div>
            </div>
        </div>

        <form id="formMediaDetails">
            <input type="hidden" id="editId">
            <div class="mb-3">
                <label class="form-label small text-uppercase fw-bold">Título / Nome</label>
                <input type="text" id="editFileName" class="form-control" placeholder="Nome amigável...">
            </div>
            <div class="mb-3">
                <label class="form-label small text-uppercase fw-bold">Alt Text (SEO)</label>
                <textarea id="editAltText" class="form-control" rows="2" placeholder="Descreva a imagem..."></textarea>
            </div>
            <div class="mb-4">
                <label class="form-label small text-uppercase fw-bold">URL Pública</label>
                <div class="input-group input-group-merge">
                    <input type="text" id="editUrl" class="form-control" readonly>
                    <span class="input-group-text cursor-pointer" id="btnCopyUrl"><i class="bx bx-copy"></i></span>
                </div>
            </div>
            
            <div class="mb-4 d-none" id="usageContainer">
                <h6 class="text-muted text-uppercase small fw-bold mb-3">Indexado em (Usado em)</h6>
                <div id="usageList" class="list-group list-group-flush border rounded">
                    <!-- Usage links here -->
                </div>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                <button type="button" class="btn btn-label-danger" id="btnDeleteDetail">Excluir Permanente</button>
            </div>
        </form>
    </div>
</div>
<!-- / Offcanvas Details -->

{% endblock %}

{% block page_js %}
<script src="{{ ASSETS_URL }}/admin_theme/vendor/libs/dropzone/dropzone.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const token = localStorage.getItem('santis_jwt');
    const cdnBase = '{{ cdn_url|default("https://cdn.santis.net.br") }}';
    
    // State
    let currentFolderId = null; // null means root
    let currentFolderName = 'Início';
    let currentPath = '/';
    let currentSearch = '';
    let currentType = 'all';
    let currentPage = 1;
    let isLoading = false;
    let hasMore = true;
    let selectedIds = [];
    // Breadcrumb stack: [{id, name}, ...] — grows as user navigates deeper
    let breadcrumbStack = [];
    
    // UI Refs
    const wrapper = document.getElementById('mediaWrapper');
    const loading = document.getElementById('mediaLoading');
    const searchInput = document.getElementById('searchInput');
    const bulkActions = document.getElementById('bulkActions');
    const bulkCount = document.getElementById('bulkCount');
    const offcanvasDetailsEls = document.getElementById('offcanvasDetails');
    const offcanvasDetails = new bootstrap.Offcanvas(offcanvasDetailsEls);
    
    // API Fetcher
    async function loadMedia(refresh = false) {
        if (isLoading || (!hasMore && !refresh)) return;
        
        isLoading = true;
        if (refresh) {
            currentPage = 1;
            wrapper.innerHTML = '';
            hasMore = true;
            isLoading = true; // Block multiple refreshes
        }
        loading.classList.remove('d-none');
        
        const params = new URLSearchParams({
            folder_id: currentFolderId || '',
            q: currentSearch,
            type: currentType === 'all' ? '' : currentType,
            page: currentPage,
            limit: 40
        });
        
        try {
            const resp = await fetch(`/api/secure/media?${params}`, {
                headers: { 'Authorization': 'Bearer ' + token }
            });
            const res = await resp.json();
            
            if (res.success) {
                console.log('%cMedia API Success:', 'color: green; font-weight: bold;', res.data);
                if (refresh) {
                    const folders = Array.isArray(res.data.folders) ? res.data.folders : [];
                    console.log(`Folders found: ${folders.length}`);
                    renderFolders(folders);
                    updateBreadcrumbs(res.data.current_folder);
                }
                
                if (currentFolderId !== null || currentSearch || currentType !== 'all') {
                    renderFiles(res.data.files);
                }
                
                if (res.data.files.length < 40) hasMore = false;
                currentPage++;
            } else {
                console.error('Media API Error:', res.message);
                wrapper.innerHTML = `<div class="col-12 text-center py-5"><i class="bx bx-error bx-lg text-danger mb-3"></i><h5>Erro ao carregar mídias: ${res.message}</h5></div>`;
            }
        } catch (e) {
            console.error('Fetch Exception:', e);
            wrapper.innerHTML = `<div class="col-12 text-center py-5"><i class="bx bx-error bx-lg text-danger mb-3"></i><h5>Erro de conexão ao servidor. Verifique o console.</h5></div>`;
        } finally {
            isLoading = false;
            loading.classList.add('d-none');
        }
    }

    function renderFolders(folders) {
        if (!folders || folders.length === 0) {
            if (currentFolderId === null) {
                wrapper.innerHTML = '<div class="col-12 text-center py-5"><i class="bx bx-folder-open bx-lg text-muted mb-3"></i><h5>Nenhuma categoria encontrada.</h5></div>';
            }
            return;
        }

        folders.forEach(f => {
            const displayName = f.display_name || f.name;
            const moduleIcon  = f.module_icon  || 'bx-folder';
            const div = document.createElement('div');
            div.className = 'col-6 col-md-4 col-lg-2 folder-item';
            div.innerHTML = `
                <div class="card h-100 shadow-none border media-card" onclick="window.navigateFolder(${f.id}, '${displayName.replace(/'/g, "\\'")}')">
                    <div class="media-preview-container" style="cursor:pointer; position:relative;">
                        <i class="bx bxs-folder" style="font-size: 5rem; color: var(--bs-warning, #ffab00); opacity: 0.75;"></i>
                        <i class="bx ${moduleIcon}" style="position:absolute; font-size: 1.7rem; color: var(--bs-primary, #696cff); bottom: 28%; left: 50%; transform: translateX(-50%);"></i>
                    </div>
                    <div class="card-body p-2 border-top">
                        <p class="card-text small fw-semibold text-truncate mb-0" title="${displayName}">${displayName}</p>
                        <p class="card-text text-muted mb-0" style="font-size:0.7rem;">Categoria de Mídia</p>
                    </div>
                </div>
            `;
            wrapper.appendChild(div);
        });
    }

    function renderFiles(files) {
        files.forEach(f => {
            const isImg = f.mime_type.startsWith('image/');
            const isSvg = f.mime_type === 'image/svg+xml';
            const isPng = f.mime_type === 'image/png';
            const useTransparentBg = isSvg || isPng; // SVGs and PNGs may have transparency
            const useCoverFit = !isSvg && !isPng; // JPEGs/WEBPs look better with cover
            const url = cdnBase + f.file_path;
            const ext = f.file_path.split('.').pop().toUpperCase();
            
            const div = document.createElement('div');
            div.className = 'col-6 col-md-4 col-lg-2';
            div.innerHTML = `
                <div class="card h-100 media-card shadow-none border" data-id="${f.id}">
                    <div class="select-overlay">
                        <input class="form-check-input bulk-check ms-0 mt-0" type="checkbox" value="${f.id}">
                    </div>
                    <div class="card-actions">
                        <button type="button" class="btn btn-icon btn-xs btn-white shadow-sm btn-edit" title="Detalhes"><i class="bx bx-pencil text-primary"></i></button>
                        <a href="${url}" target="_blank" class="btn btn-icon btn-xs btn-white shadow-sm" title="Abrir Link"><i class="bx bx-link-external text-secondary"></i></a>
                    </div>
                    <div class="media-preview-container${useTransparentBg ? ' transparent-bg' : ''}">
                        ${isImg ? `<img src="${url}" class="media-preview${useCoverFit ? ' cover' : ''}" alt="${f.alt_text || ''}">` : `<i class="bx bxs-file-blank media-icon"></i>`}
                    </div>
                    <div class="card-body p-2 border-top">
                        <p class="card-text small fw-medium text-truncate mb-0" title="${f.file_name}">${f.file_name}</p>
                        <div class="d-flex justify-content-between align-items-center mt-1">
                            <span class="badge bg-label-secondary p-1 font-size-10">${ext}</span>
                            <span class="text-muted font-size-10">${(f.size / 1024).toFixed(0)} KB</span>
                        </div>
                    </div>
                </div>
            `;
            
            const cardEl = div.querySelector('.media-card');
            
            // Edit action
            div.querySelector('.btn-edit').addEventListener('click', (e) => {
                e.stopPropagation();
                openDetails(f.id);
            });
            
            // Checkbox logic
            div.querySelector('.bulk-check').onclick = (e) => {
                e.stopPropagation();
                handleSelection(f.id, e.target.checked);
            };

            // Card click (open details)
            cardEl.onclick = (e) => {
                if (e.target.tagName === 'INPUT' || e.target.closest('.card-actions')) return;
                openDetails(f.id);
            };

            wrapper.appendChild(div);
        });
    }

    function handleSelection(id, checked) {
        if (checked) selectedIds.push(id);
        else selectedIds = selectedIds.filter(v => v !== id);
        
        bulkCount.innerText = selectedIds.length;
        if (selectedIds.length > 0) bulkActions.classList.remove('d-none');
        else bulkActions.classList.add('d-none');
        
        const el = document.querySelector(`.media-card[data-id="${id}"]`);
        if (el) {
            if (checked) el.classList.add('selected');
            else el.classList.remove('selected');
        }
    }

    async function openDetails(id) {
        try {
            const resp = await fetch(`/api/secure/media/${id}`, {
                headers: { 'Authorization': 'Bearer ' + token }
            });
            const res = await resp.json();
            
            if (!res.success) {
                alert('Não foi possível carregar os detalhes do arquivo.');
                return;
            }

            const f = res.data;
            document.getElementById('editId').value = f.id;
            document.getElementById('editFileName').value = f.file_name || '';
            
            // Technical specs
            document.getElementById('metaSize').innerText = f.size_formatted || '-';
            document.getElementById('metaExt').innerText = (f.file_path || '').split('.').pop().toUpperCase();
            document.getElementById('metaDate').innerText = f.created_at ? new Date(f.created_at).toLocaleDateString('pt-BR') : '-';
            document.getElementById('metaMime').innerText = f.mime_type || '-';
            
            // Editable fields
            document.getElementById('editAltText').value = f.alt_text || '';
            if (document.getElementById('editCaption')) {
                document.getElementById('editCaption').value = f.caption || '';
            }
            
            const fullUrl = cdnBase + f.file_path;
            document.getElementById('editUrl').value = fullUrl;

            const container = document.getElementById('usageContainer');
            const list = document.getElementById('usageList');
            list.innerHTML = '';
            
            if (f.used_in && f.used_in.length > 0) {
                container.classList.remove('d-none');
                f.used_in.forEach(use => {
                    list.innerHTML += `
                        <a href="/content/${use.type_slug}/edit/${use.id}" target="_blank" class="list-group-item list-group-item-action p-2 small d-flex justify-content-between">
                            <span>${use.title}</span>
                            <span class="badge bg-label-info">${use.type_name}</span>
                        </a>
                    `;
                });
            } else {
                container.classList.add('d-none');
            }

            const isImg = f.mime_type && f.mime_type.startsWith('image/');
            const isSvg = f.mime_type === 'image/svg+xml';
            document.getElementById('detailPreview').innerHTML = isImg 
                ? `<img src="${fullUrl}" class="img-fluid rounded" style="max-height: 220px; object-fit: contain; ${isSvg ? 'background: repeating-conic-gradient(#ccc 0% 25%, #fff 0% 50%) 0 0 / 16px 16px;' : ''}">`
                : `<i class="bx bxs-file-blank display-1 text-primary"></i>`;
            
            offcanvasDetails.show();
        } catch (e) {
            console.error('openDetails error:', e);
            alert('Erro de conexão ao carregar detalhes do arquivo.');
        }
    }

    // Navigation and Breadcrumbs
    window.navigateFolder = (id, name, stackIndex) => {
        // stackIndex: if provided, trim the stack to that level (breadcrumb click)
        if (id === null) {
            breadcrumbStack = [];
        } else if (stackIndex !== undefined) {
            // Clicked an ancestor in the breadcrumb — truncate stack
            breadcrumbStack = breadcrumbStack.slice(0, stackIndex + 1);
        } else {
            // Navigating deeper: push new item
            breadcrumbStack.push({ id, name });
        }

        currentFolderId = id;
        currentFolderName = name || 'Início';
        loadMedia(true);
        selectedIds = [];
        bulkActions.classList.add('d-none');
        renderBreadcrumbs();
        
        // Handle upload area visibility/state
        const dzMsg = document.getElementById('dzMessage');
        const rootWarning = document.getElementById('rootUploadWarning');
        const btnOpenUpload = document.getElementById('btnOpenUpload');
        
        if (id === null) {
            dzMsg?.classList.add('d-none');
            rootWarning?.classList.remove('d-none');
            if (btnOpenUpload) {
                btnOpenUpload.disabled = true;
                btnOpenUpload.title = "Selecione uma categoria primeiro";
            }
            if (myDropzone && typeof myDropzone.removeEventListeners === 'function') myDropzone.removeEventListeners();
        } else {
            dzMsg?.classList.remove('d-none');
            rootWarning?.classList.add('d-none');
            if (btnOpenUpload) {
                btnOpenUpload.disabled = false;
                btnOpenUpload.title = "";
            }
            if (myDropzone && typeof myDropzone.setupEventListeners === 'function') myDropzone.setupEventListeners();
        }
        
        // Ensure upload collapse is closed when navigating
        const collapse = bootstrap.Collapse.getInstance(document.getElementById('uploadCollapse'));
        if (collapse) collapse.hide();
    };

    function renderBreadcrumbs() {
        const bc = document.getElementById('mediaBreadcrumb');
        if (!bc) return;

        // 'Início' is always a clickable link that reloads root
        let html = '<li class="breadcrumb-item"><a href="javascript:void(0)" onclick="window.navigateFolder(null)">Início</a></li>';

        breadcrumbStack.forEach((crumb, index) => {
            const isLast = index === breadcrumbStack.length - 1;
            if (isLast) {
                html += `<li class="breadcrumb-item active" aria-current="page">${crumb.name}</li>`;
            } else {
                html += `<li class="breadcrumb-item"><a href="javascript:void(0)" onclick="window.navigateFolder(${crumb.id}, '${crumb.name}', ${index})">${crumb.name}</a></li>`;
            }
        });

        bc.innerHTML = html;
    }

    function updateBreadcrumbs(folder) {
        // Called after API response — no longer rebuilds from API, stack handles it
        renderBreadcrumbs();
    }

    // Search and Filters
    let searchTimeout;
    searchInput.oninput = () => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            currentSearch = searchInput.value;
            loadMedia(true);
        }, 500);
    };

    document.querySelectorAll('.filter-type').forEach(btn => {
        btn.onclick = () => {
            document.querySelectorAll('.filter-type').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            currentType = btn.dataset.type;
            loadMedia(true);
        };
    });

    // Grid / List View Toggle
    let currentView = 'grid'; // 'grid' | 'list'
    document.getElementById('viewGrid').onclick = () => {
        currentView = 'grid';
        wrapper.classList.remove('list-view');
        wrapper.className = 'row g-4'; // restore grid classes
        document.getElementById('viewGrid').classList.add('active');
        document.getElementById('viewList').classList.remove('active');
        loadMedia(true);
    };
    document.getElementById('viewList').onclick = () => {
        currentView = 'list';
        wrapper.className = 'list-view'; // switch to list
        document.getElementById('viewList').classList.add('active');
        document.getElementById('viewGrid').classList.remove('active');
        loadMedia(true);
    };

    // Form Submissions
    document.getElementById('formMediaDetails').onsubmit = async (e) => {
        e.preventDefault();
        const id = document.getElementById('editId').value;
        const data = {
            file_name: document.getElementById('editFileName').value,
            alt_text: document.getElementById('editAltText').value,
            caption: document.getElementById('editCaption').value
        };
        
        const resp = await fetch(`/api/secure/media/${id}`, {
            method: 'PUT',
            headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        
        if ((await resp.json()).success) {
            offcanvasDetails.hide();
            loadMedia(true);
        }
    };


    document.getElementById('btnDeleteDetail').onclick = async () => {
        if (!confirm('Deseja excluir este arquivo permanentemente do CDN?')) return;
        const id = document.getElementById('editId').value;
        await fetch(`/api/secure/media/${id}`, { method: 'DELETE', headers: { 'Authorization': 'Bearer ' + token } });
        offcanvasDetails.hide();
        loadMedia(true);
    };

    document.getElementById('btnBulkDelete').onclick = async () => {
        if (!confirm(`Excluir permanentemente ${selectedIds.length} mídias selecionadas?`)) return;
        await fetch('/api/secure/media/delete-bulk', {
            method: 'POST',
            headers: { 'Authorization': 'Bearer ' + token, 'Content-Type': 'application/json' },
            body: JSON.stringify({ ids: selectedIds })
        });
        selectedIds = [];
        bulkActions.classList.add('d-none');
        loadMedia(true);
    };

    // Dropzone Configuration
    Dropzone.autoDiscover = false;
    const myDropzone = new Dropzone("#dz-upload", {
        url: "/api/secure/media/upload",
        headers: { 'Authorization': 'Bearer ' + token },
        autoProcessQueue: false,
        addRemoveLinks: true,
        parallelUploads: 5,
        params: () => ({ folder_id: currentFolderId || '' }),
        acceptedFiles: 'image/*,application/pdf,video/*',
    });
    

    myDropzone.on("addedfile", () => document.getElementById('uploadActions').classList.remove('d-none'));
    myDropzone.on("queuecomplete", () => {
        myDropzone.removeAllFiles();
        document.getElementById('uploadActions').classList.add('d-none');
        bootstrap.Collapse.getInstance(document.getElementById('uploadCollapse')).hide();
        loadMedia(true);
    });

    document.getElementById('btnStartUpload').onclick = () => myDropzone.processQueue();
    document.getElementById('btnCancelUpload').onclick = () => {
        myDropzone.removeAllFiles();
        document.getElementById('uploadActions').classList.add('d-none');
    };

    // Infinite Scroll — only fires AFTER the initial load completes
    let initialized = false;
    const observer = new IntersectionObserver(entries => {
        if (entries[0].isIntersecting && hasMore && !isLoading && initialized) {
            loadMedia();
        }
    }, { threshold: 0.5 });
    observer.observe(document.getElementById('loadMoreTrigger'));

    // Copy URL helper
    document.getElementById('btnCopyUrl').onclick = () => {
        const urlInput = document.getElementById('editUrl');
        urlInput.select();
        document.execCommand('copy');
        const icon = document.querySelector('#btnCopyUrl i');
        icon.className = 'bx bx-check text-success';
        setTimeout(() => icon.className = 'bx bx-copy', 2000);
    };

    // Init — run AFTER all setup, before observer can fire
    window.navigateFolder(null);
    // Mark as ready after the async load resolves
    setTimeout(() => { initialized = true; }, 800);
});
</script>
{% endblock %}
