<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
  <div class="app-brand demo">
    <a href="{{ site_url | default('/') }}" class="app-brand-link">
      <span class="app-brand-logo demo">
        <img src="{{ site_icon | default('https://cdn.santis.net.br/config/icon-santis.svg') }}" alt="Icon" style="max-height: 26px; width: auto;" />
      </span>
      <span class="app-brand-text demo menu-text ms-2">
        <img src="{{ site_logo | default('https://cdn.santis.net.br/config/logo-santis.svg') }}" alt="Logo" style="max-height: 38px; width: auto; object-fit: contain;" />
      </span>
    </a>

    <a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto">
      <i class="icon-base bx bx-chevron-left"></i>
    </a>
  </div>

  <div class="menu-inner-shadow"></div>

  <ul class="menu-inner py-1">
    <li class="menu-header small">
      <span class="menu-header-text" data-i18n="CMS Headless">CMS Headless</span>
    </li>
    <li class="menu-item {% if menu_active == 'dashboard' %}active{% endif %}">
      <a href="/" class="menu-link">
        <i class="menu-icon icon-base bx bx-home-circle"></i>
        <div data-i18n="Dashboard">Dashboard</div>
      </a>
    </li>
    <li class="menu-item {% if menu_active == 'media' %}active{% endif %}">
      <a href="/media" class="menu-link">
        <i class="menu-icon icon-base bx bx-images"></i>
        <div data-i18n="Mídia">Gerenciador de Mídia</div>
      </a>
    </li>

    <!-- Divider for Modules -->
    <li class="menu-divider mt-3 mb-2 border-top"></li>
    
    {% for mod in MENU_DYNAMIC_MODULES %}
      {# Só exibe no menu principal se o tipo estiver ATIVO #}
      {% if mod.is_active %}
      <li class="menu-item {% if menu_active == ('entries_' ~ mod.slug) %}active{% endif %}">
        <a href="/entries/{{ mod.slug }}" class="menu-link">
          <i class="menu-icon icon-base bx {{ mod.icon | default('bx-collection') }}"></i>
          <div data-i18n="{{ mod.name }}">{{ mod.name }}</div>
        </a>
      </li>
      {% endif %}
    {% else %}
      <li class="menu-header small">
        <span class="menu-header-text text-muted">Nenhum Módulo EAV</span>
      </li>
    {% endfor %}

    <li class="menu-header small">
      <span class="menu-header-text" data-i18n="Infraestrutura">Infraestrutura</span>
    </li>
    
    <!-- Menu Collapsible: Ferramentas -->
    <li class="menu-item {% if menu_active in ['blueprints', 'modules'] %}open active{% endif %}">
      <a href="javascript:void(0);" class="menu-link menu-toggle">
        <i class="menu-icon icon-base bx bx-wrench"></i>
        <div data-i18n="Ferramentas">Ferramentas</div>
      </a>
      <ul class="menu-sub">
        <li class="menu-item {% if menu_active == 'modules' %}active{% endif %}">
          <a href="/modulos" class="menu-link">
            <div data-i18n="Módulos">Módulos</div>
          </a>
        </li>
        <li class="menu-item {% if menu_active == 'blueprints' %}active{% endif %}">
          <a href="/blueprints" class="menu-link">
            <div data-i18n="Blueprints">Blueprints SaaS</div>
          </a>
        </li>
      </ul>
    </li>

    <li class="menu-item {% if menu_active == 'settings' %}active{% endif %}">
      <a href="/settings" class="menu-link">
        <i class="menu-icon icon-base bx bx-cog"></i>
        <div data-i18n="Configurações">Configurações</div>
      </a>
    </li>
  </ul>
</aside>
